<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image"> 
                    {{#if user}}
                        {{{editIcon user.id ../user.id id}}}
                    {{/if}}
                </div>
                <div class="card-content center-align">
                    <h5>{{ title }}</h5>
                    <div class="story-text">{{stripTags (truncate body 150)}}</div>
                    <br>
                    <div class="chip">
                        <img src="{{ user.photo }}">
                        <a href="/stories/user/{{user.id}}">{{ user.name }}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/story/{{ id }}" class="btn grey darken-3"> Read more</a>
                </div>
            </div>
        </div>
    {{else}}
    <p>No stories found</p>
    {{/each}}
</div>