<h1>Edit Story</h1>
<div class="row">
    <form action="/stories/edit/{{story.id}}?_method=PUT" method="POST" class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <input type="text" name="title" value="{{ story.title }}">
                <label>Title</label>
                {{#if errors.title}}
                    {{#each errors.title}}
                    <span class="red-text">{{ message }}</span>
                    {{/each}}
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <select name="status">
                    {{#select story.status}}
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                        <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label>Status</label>
            </div>
        </div>
        <p>
            <label>
                <input type="checkbox" name="allowComments" class="filled-in" {{#if story.allowComments}} checked="checked" {{/if}} />
                <span>Allow Comments</span>
            </label>
        </p>
        <div class="row">
            <div class="input-field col s12">
                <h5>Tell us your story</h5>
                <textarea name="body">{{story.body}}</textarea>
                {{#if errors.body}}
                    {{#each errors.body}}
                    <span class="red-text">{{ message }}</span>
                    {{/each}}
                {{/if}}
            </div>
        </div>
        <input type="submit" value="Save" class="btn">
    </form>
</div>